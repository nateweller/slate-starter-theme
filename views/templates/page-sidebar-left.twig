{% extends 'layouts/sidebar-left.twig' %}

{% block sidebar %}
    <nav>
        <ul>
            {% for menu_item in menu.items %}
                <li class="{{ menu_item.classes|join(' ') }} --margin-bottom-4">
                    <a href="{{ menu_item.link }}">
                        {{ menu_item.title }}
                    </a>
                    {% if menu_item.children %}
                        <ul>
                            {% for sub_menu_item in menu.children %}
                                <li>
                                    <a href="{{ sub_menu_item.link }}">
                                        {{ sub_menu_item.title }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </nav>
{% endblock %}

{% block content %}
    <article class="content-area">
        <header class="--padding-bottom-4">
            <h2>
                {{ post.title }}
            </h2>
        </header>
        {{ post.content }}
    </article>
{% endblock %}