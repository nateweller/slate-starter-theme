<!doctype html>
<html {{ fn('language_attributes') }}>
    <head>
        <meta charset="{{ fn('bloginfo', 'charset' ) }}">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="profile" href="https://gmpg.org/xfn/11">

        {{ wp_head() }}
    </head>

    <body {{ fn('body_class') }}>
        {{ fn('wp_body_open') }}
        <header class="site-header">
            <div class="container site-header__container">
                {% if logo %}
                    <a href="{{ site.url }}" class="site-header__logo">
                        <img src="{{ logo }}" alt="{{ site.name }}" />
                    </a>
                {% else %}
                    <h1>
                        <a href="{{ site.url }}">
                            {{ site.name }}
                        </a>
                    </h1>
                {% endif %}
                <div class="site-header__mobile">
                    <button class="site-header__nav-toggle">
                        Menu
                    </button>
                </div>
                <nav class="site-header__desktop-nav" role="navigation">
                    <ul class="has-text-align-right">
                        {% for menu_item in menu.items %}
                            <li class="site-header__item {{ menu_item.classes|join(' ') }}">
                                <a href="{{ menu_item.link }}" class="site-header__item__link">
                                    {{ menu_item.title }}
                                </a>
                                {% if menu_item.children %}
                                    <ul>
                                        {% for sub_menu_item in menu.children %}
                                            <li>
                                                <a href="{{ sub_menu_item.link }}">
                                                    {{ sub_menu_item.title }}
                                                </a>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                </nav>
            </div>
            <nav class="site-header__mobile-nav" role="navigation">
                <ul class="container">
                    {% for menu_item in menu.items %}
                        <li class="site-header__mobile-nav__item {{ menu_item.classes|join(' ') }}">
                            <a href="{{ menu_item.link }}" class="site-header__mobile-nav__item__link">
                                {{ menu_item.title }}
                            </a>
                            {% if menu_item.children %}
                                <ul>
                                    {% for sub_menu_item in menu.children %}
                                        <li>
                                            <a href="{{ sub_menu_item.link }}">
                                                {{ sub_menu_item.title }}
                                            </a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            </nav>
        </header>