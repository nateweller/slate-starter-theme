{{ fn('get_header') }}

<main>
    <div class="container --padding-y-24">
        <div class="row">
            <div class="col-12 col-lg-3">
                {% block sidebar %}
                {% endblock %}
            </div>
            <div class="col-12 col-lg-9">
                {% block content %}
                    {% for post in posts %}
                        <article>
                            {{ post.content }}
                        </article>
                    {% endfor %}
                {% endblock %}
            </div>
        </div>
    </div>
</main>

{{ fn('get_footer') }}