{{ fn('get_header') }}

<main>
    {% block content %}
        {% for post in posts %}
            <article class="content-area {{ not loop.last ? '--margin-bottom-24' }}">
                <header class="--padding-bottom-4">
                    <h2>
                        {{ post.title }}
                    </h2>
                </header>
                {{ post.content }}
            </article>
        {% endfor %}
    {% endblock %}
</main>

