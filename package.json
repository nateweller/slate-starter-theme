{
  "name": "slate",
  "version": "0.0.0",
  "main": "functions.php",
  "author": "Nate Weller <hello@nateweller.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@wordpress/scripts": "^12.3.0",
    "concurrently": "^5.3.0",
    "dir-archiver": "^1.1.2",
    "imageoptim-cli": "^3.0.2",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.5",
    "postcss": "^8.1.1",
    "postcss-cli": "^8.1.0",
    "reload": "^3.1.1",
    "uglify-js": "^3.12.1"
  },
  "scripts": {
    "test": "node scripts.js",
    "watch": "concurrently --kill-others \"yarn watch:css\" \"yarn watch:js\"",
    "watch:css": "nodemon -e scss --exec \"yarn styles\"",
    "watch:js": "nodemon -e js --exec \"yarn scripts\" --ignore '*.min.js' --ignore '*.map.js'",
    "styles": "node scripts.js styles",
    "scripts": "node scripts.js scripts",
    "images": "node scripts.js images",
    "compile": "node scripts.js compile",
    "lint:scss": "wp-scripts lint-style 'sass/**/*.scss'",
    "lint:js": "wp-scripts lint-js 'js/*.js'",
    "bundle": "dir-archiver --src . --dest ../_slate.zip --exclude .DS_Store .stylelintrc.json .eslintrc .git .gitattributes .github .gitignore README.md composer.json composer.lock node_modules vendor package-lock.json yarn.lock package.json .travis.yml phpcs.xml.dist sass style.css.map"
  }
}
